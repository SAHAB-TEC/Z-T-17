<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="purchase_order_form_inherit_x14" model="ir.ui.view">
        <field name="name">purchase.order.form.x14</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='products']//tree/field[@name='price_unit']" position="after">
                <field name="discount_by_amount" groups="product.group_discount_per_so_line" optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>
