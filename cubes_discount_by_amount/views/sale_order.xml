<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form_inherit_x14" model="ir.ui.view">
        <field name="name">sale.order.form.x14</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']//tree/field[@name='discount']" position="before">
                <field name="discount_by_amount" groups="product.group_discount_per_so_line" optional="show" widget="sol_discount"/>
            </xpath>
        </field>
    </record>

</odoo>
